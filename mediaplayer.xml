  <property name="project.jdk.home" value="${jdk.home.10}"/>
  <property name="project.jdk.bin" value="${jdk.bin.10}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.10"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="jgoodies-forms.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module MediaPlayer -->
  
  <dirname property="module.mediaplayer.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.mediaplayer" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.mediaplayer" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.mediaplayer" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.mediaplayer" value="-encoding UTF-8 -source 10 -target 10 ${compiler.args}"/>
  
  <property name="mediaplayer.output.dir" value="${module.mediaplayer.basedir}/out/production/MediaPlayer"/>
  <property name="mediaplayer.testoutput.dir" value="${module.mediaplayer.basedir}/out/test/MediaPlayer"/>
  
  <path id="mediaplayer.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="mediaplayer.module.production.classpath">
    <path refid="${module.jdk.classpath.mediaplayer}"/>
  </path>
  
  <path id="mediaplayer.runtime.production.module.classpath">
    <pathelement location="${mediaplayer.output.dir}"/>
  </path>
  
  <path id="mediaplayer.module.classpath">
    <path refid="${module.jdk.classpath.mediaplayer}"/>
    <pathelement location="${mediaplayer.output.dir}"/>
  </path>
  
  <path id="mediaplayer.runtime.module.classpath">
    <pathelement location="${mediaplayer.testoutput.dir}"/>
    <pathelement location="${mediaplayer.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.mediaplayer">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.mediaplayer">
    <patternset refid="excluded.from.module.mediaplayer"/>
  </patternset>
  
  <path id="mediaplayer.module.sourcepath">
    <dirset dir="${module.mediaplayer.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.mediaplayer" depends="compile.module.mediaplayer.production,compile.module.mediaplayer.tests" description="Compile module MediaPlayer"/>
  
  <target name="compile.module.mediaplayer.production" depends="register.custom.compilers" description="Compile module MediaPlayer; production classes">
    <mkdir dir="${mediaplayer.output.dir}"/>
    <javac2 destdir="${mediaplayer.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.mediaplayer}/javac">
      <compilerarg line="${compiler.args.mediaplayer}"/>
      <bootclasspath refid="mediaplayer.module.bootclasspath"/>
      <classpath refid="mediaplayer.module.production.classpath"/>
      <src refid="mediaplayer.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.mediaplayer"/>
    </javac2>
    
    <copy todir="${mediaplayer.output.dir}">
      <fileset dir="${module.mediaplayer.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.mediaplayer.tests" depends="register.custom.compilers,compile.module.mediaplayer.production" description="compile module MediaPlayer; test classes" unless="skip.tests"/>
  
  <target name="clean.module.mediaplayer" description="cleanup module">
    <delete dir="${mediaplayer.output.dir}"/>
    <delete dir="${mediaplayer.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.mediaplayer, clean.artifact.mediaplayer" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.mediaplayer" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.mediaplayer" value="${basedir}/out/artifacts/MediaPlayer"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="artifact.temp.output.JavaFXApp" value="${artifacts.temp.dir}/JavaFXApp.jar"/>
    <taskdef resource="com/sun/javafx/tools/ant/antlib.xml" uri="javafx:com.sun.javafx.tools.ant" classpath="${jdk.home.10}/lib/ant-javafx.jar"/>
  </target>
  
  <target name="clean.artifact.mediaplayer" description="clean MediaPlayer artifact output">
    <delete dir="${artifact.output.mediaplayer}"/>
  </target>
  
  <target name="artifact.mediaplayer" depends="init.artifacts, compile.module.mediaplayer, compile.module.mediaplayer" description="Build &#39;MediaPlayer&#39; artifact" xmlns:fx="javafx:com.sun.javafx.tools.ant">
    <mkdir dir="${artifact.output.mediaplayer}"/>
    <copy todir="${artifact.temp.output.JavaFXApp}">
      <fileset dir="${mediaplayer.output.dir}"/>
    </copy>
    <copy todir="${artifact.temp.output.JavaFXApp}">
      <fileset dir="${mediaplayer.output.dir}"/>
    </copy>
    <fx:fileset id="all_but_JavaFXApp" dir="${artifact.temp.output.JavaFXApp}" includes="**/*.jar">
      <exclude name="JavaFXApp.jar"/>
    </fx:fileset>
    <fx:fileset id="all_JavaFXApp" dir="${artifact.temp.output.JavaFXApp}" includes="**/*.jar"/>
    <fx:application id="JavaFXApp_id" name="MediaPlayer" mainClass="sample.Main" version="1.0"/>
    <fx:jar destfile="${artifact.temp.output.JavaFXApp}/JavaFXApp.jar">
      <fx:application refid="JavaFXApp_id"/>
      <fileset dir="${artifact.temp.output.JavaFXApp}" excludes="**/*.jar"/>
      <fx:resources>
        <fx:fileset refid="all_but_JavaFXApp"/>
      </fx:resources>
      <manifest>
        <attribute name="Implementation-Title" value="Media Player By Dilshan Karunarathne"/>
        <attribute name="Implementation-Version" value="1.0"/>
        <attribute name="Implementation-Vendor" value="Dilshan Karunarathne"/>
      </manifest>
    </fx:jar>
    <fx:deploy width="600" height="400" updatemode="background" outdir="${artifact.temp.output.JavaFXApp}/deploy" outfile="JavaFXApp">
      <fx:application refid="JavaFXApp_id"/>
      <fx:info title="Media Player By Dilshan Karunarathne" vendor="Dilshan Karunarathne" description="Media Player 
Created by Dilshan Karunarathne
2021-07-04"/>
      <fx:resources>
        <fx:fileset refid="all_JavaFXApp"/>
      </fx:resources>
    </fx:deploy>
    <copy todir="${artifact.output.mediaplayer}">
      <fileset dir="${artifact.temp.output.JavaFXApp}/deploy"/>
    </copy>
    <delete includeemptydirs="true">
      <fileset dir="${artifact.temp.output.JavaFXApp}"/>
    </delete>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.mediaplayer" description="Build all artifacts">
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>